<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:t="http://schemas.android.com/tools">

    <uses-feature a:name="android.software.leanback" a:required="false" />
    <uses-feature a:name="android.software.input_methods" a:required="false" />
    <uses-feature a:name="android.hardware.touchscreen" a:required="false" />
    <uses-feature a:name="android.hardware.gamepad" a:required="false" />

    <application
        a:icon="@mipmap/ico"
        a:label="Minikoban"
        a:roundIcon="@mipmap/ico"
        a:supportsRtl="true"
        a:banner="@mipmap/ico"
        t:targetApi="31">
        <activity
            a:name=".Main"
            a:configChanges="keyboard|keyboardHidden|navigation"
            a:exported="true">
            <intent-filter>
                <action a:name="android.intent.action.MAIN" />
                <category a:name="android.intent.category.LAUNCHER" />
                <category a:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>